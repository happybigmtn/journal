---
import '../styles/global.css';

const error = Astro.url.searchParams.get('error');
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="robots" content="noindex, nofollow">
  <title>Login | Journal</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Alegreya+Sans:wght@300;400;500&family=EB+Garamond:wght@400;500&family=IBM+Plex+Mono:wght@400;500&display=swap" rel="stylesheet">
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon.png">
</head>
<body>
  <main class="login-container">
    <div class="login-modal">
      <h1>Private Journal</h1>
      <p>This site is password protected.</p>
      <form method="POST" action="/login">
        <input
          type="password"
          name="password"
          placeholder="Enter password"
          autocomplete="current-password"
          autofocus
          required
        />
        <button type="submit">Enter</button>
      </form>
      {error && <p class="error">Incorrect password</p>}
    </div>
  </main>

  <style>
    body {
      margin: 0;
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      background: var(--background, #fff);
    }

    .login-container {
      width: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .login-modal {
      text-align: center;
      max-width: 320px;
      width: 90%;
      padding: 2rem;
    }

    .login-modal h1 {
      font-family: var(--font-display, 'EB Garamond', serif);
      font-size: var(--text-2xl, 1.5rem);
      font-weight: 400;
      margin-bottom: 0.5rem;
    }

    .login-modal p {
      font-family: var(--font-body, 'Alegreya Sans', sans-serif);
      color: var(--muted-foreground, #666);
      margin-bottom: 1.5rem;
      font-size: var(--text-sm, 0.875rem);
    }

    form {
      display: flex;
      flex-direction: column;
      gap: 0.75rem;
    }

    input[type="password"] {
      font-family: var(--font-mono, 'IBM Plex Mono', monospace);
      font-size: var(--text-base, 1rem);
      padding: 0.75rem 1rem;
      border: var(--border-thin, 1px solid #000);
      background: transparent;
      text-align: center;
      letter-spacing: 0.1em;
    }

    input[type="password"]:focus {
      outline: none;
      border-color: var(--black, #000);
      box-shadow: 0 0 0 1px var(--black, #000);
    }

    button[type="submit"] {
      font-family: var(--font-body, 'Alegreya Sans', sans-serif);
      font-size: var(--text-sm, 0.875rem);
      padding: 0.75rem 1.5rem;
      background: var(--black, #000);
      color: var(--white, #fff);
      border: none;
      cursor: pointer;
      text-transform: uppercase;
      letter-spacing: 0.1em;
      transition: background 0.2s ease;
    }

    button[type="submit"]:hover {
      background: var(--muted-foreground, #333);
    }

    .error {
      color: #c00 !important;
      font-size: var(--text-xs, 0.75rem) !important;
      margin-top: 0.5rem !important;
      margin-bottom: 0 !important;
    }
  </style>
</body>
</html>
