---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Art | Journal" description="Generative art explorations">
  <div class="art-wrapper">
    <!-- Art options menu button (green /) -->
    <button class="art-menu-toggle" id="artMenuToggle" aria-label="Art options">
      <span>/</span>
    </button>

    <!-- Art options dropdown -->
    <div class="art-menu" id="artMenu" hidden>
      <div class="art-menu-header">select artwork</div>
      <ul class="art-menu-list">
        <li data-src="/generator/app.html" data-key="1" class="active">
          <kbd>1</kbd>
          <span>Substrate Mountain</span>
          <span class="tag">current</span>
        </li>
        <li data-src="" data-key="2" class="disabled">
          <kbd>2</kbd>
          <span>Coming Soon</span>
        </li>
        <li data-src="" data-key="3" class="disabled">
          <kbd>3</kbd>
          <span>Coming Soon</span>
        </li>
      </ul>
      <div class="art-menu-hint">
        press <kbd>/</kbd> to toggle Â· <kbd>1-9</kbd> to select
      </div>
    </div>

    <!-- Art iframe -->
    <iframe
      id="artFrame"
      src="/generator/app.html"
      title="Generative Art"
      allow="fullscreen"
    ></iframe>
  </div>
</BaseLayout>

<style>
  .art-wrapper {
    position: relative;
    width: 100%;
    height: calc(100vh - 60px);
    background: #000;
  }

  .art-wrapper iframe {
    width: 100%;
    height: 100%;
    border: none;
    display: block;
  }

  /* Green slash menu toggle */
  .art-menu-toggle {
    position: absolute;
    top: 16px;
    left: 16px;
    width: 44px;
    height: 44px;
    background: rgba(0, 0, 0, 0.8);
    border: 1px solid #00ff00;
    border-radius: 8px;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 100;
    transition: all 0.2s ease;
    backdrop-filter: blur(8px);
  }

  .art-menu-toggle span {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 1.5rem;
    font-weight: 600;
    color: #00ff00;
    line-height: 1;
  }

  .art-menu-toggle:hover {
    background: rgba(0, 255, 0, 0.15);
    box-shadow: 0 0 20px rgba(0, 255, 0, 0.3);
  }

  .art-menu-toggle.active {
    background: rgba(0, 255, 0, 0.2);
    border-color: #00ff88;
  }

  /* Art options menu */
  .art-menu {
    position: absolute;
    top: 68px;
    left: 16px;
    width: 280px;
    background: rgba(10, 10, 10, 0.95);
    border: 1px solid #00ff00;
    border-radius: 8px;
    z-index: 100;
    backdrop-filter: blur(12px);
    box-shadow: 0 4px 30px rgba(0, 255, 0, 0.15);
    overflow: hidden;
  }

  .art-menu[hidden] {
    display: none;
  }

  .art-menu-header {
    padding: 0.75rem 1rem;
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.75rem;
    color: #00ff00;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    border-bottom: 1px solid rgba(0, 255, 0, 0.2);
  }

  .art-menu-list {
    list-style: none;
    margin: 0;
    padding: 0.5rem 0;
  }

  .art-menu-list li {
    display: flex;
    align-items: center;
    padding: 0.6rem 1rem;
    gap: 0.75rem;
    cursor: pointer;
    transition: background 0.1s;
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.9rem;
    color: #fff;
  }

  .art-menu-list li:hover:not(.disabled) {
    background: rgba(0, 255, 0, 0.1);
  }

  .art-menu-list li.active {
    background: rgba(0, 255, 0, 0.15);
  }

  .art-menu-list li.disabled {
    opacity: 0.4;
    cursor: not-allowed;
  }

  .art-menu-list kbd {
    background: #1a1a1a;
    border: 1px solid #333;
    border-radius: 4px;
    padding: 0.15em 0.4em;
    color: #00ff00;
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.75rem;
  }

  .art-menu-list .tag {
    margin-left: auto;
    font-size: 0.7rem;
    color: #00ff00;
    opacity: 0.7;
  }

  .art-menu-hint {
    padding: 0.6rem 1rem;
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.7rem;
    color: #666;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
  }

  .art-menu-hint kbd {
    background: #1a1a1a;
    border: 1px solid #333;
    border-radius: 3px;
    padding: 0.1em 0.35em;
    font-family: inherit;
    color: #888;
  }

  /* Override container styles for full-width art */
  :global(.container) {
    max-width: none !important;
    padding: 0 !important;
  }
</style>

<script>
  const toggle = document.getElementById('artMenuToggle');
  const menu = document.getElementById('artMenu');
  const frame = document.getElementById('artFrame') as HTMLIFrameElement;
  const items = Array.from(document.querySelectorAll('.art-menu-list li'));

  function openMenu() {
    menu?.removeAttribute('hidden');
    toggle?.classList.add('active');
  }

  function closeMenu() {
    menu?.setAttribute('hidden', '');
    toggle?.classList.remove('active');
  }

  function toggleMenu() {
    if (menu?.hasAttribute('hidden')) {
      openMenu();
    } else {
      closeMenu();
    }
  }

  function selectArt(item: Element) {
    const src = item.getAttribute('data-src');
    if (!src || item.classList.contains('disabled')) return;
    
    // Update active state
    items.forEach(i => i.classList.remove('active'));
    item.classList.add('active');
    
    // Update tag
    items.forEach(i => {
      const tag = i.querySelector('.tag');
      if (tag) tag.textContent = i === item ? 'current' : '';
    });
    
    // Load new art
    if (frame) frame.src = src;
    closeMenu();
  }

  // Toggle button click
  toggle?.addEventListener('click', (e) => {
    e.stopPropagation();
    toggleMenu();
  });

  // Item clicks
  items.forEach(item => {
    item.addEventListener('click', () => selectArt(item));
  });

  // Close when clicking outside
  document.addEventListener('click', (e) => {
    if (!menu?.contains(e.target as Node) && e.target !== toggle) {
      closeMenu();
    }
  });

  // Keyboard shortcuts
  document.addEventListener('keydown', (e) => {
    const isInputFocused = document.activeElement?.tagName === 'INPUT' || 
                           document.activeElement?.tagName === 'TEXTAREA';
    if (isInputFocused) return;

    // / toggles menu
    if (e.key === '/') {
      e.preventDefault();
      toggleMenu();
      return;
    }

    // Escape closes menu
    if (e.key === 'Escape') {
      closeMenu();
      return;
    }

    // Number keys select art (1-9)
    const num = parseInt(e.key);
    if (num >= 1 && num <= 9) {
      const item = items[num - 1];
      if (item) {
        e.preventDefault();
        selectArt(item);
      }
    }
  });
</script>
