---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const entries = await getCollection('journal', ({ data }) => !data.draft);

// Get all tags with counts
const tagCounts = entries.reduce((acc, entry) => {
  (entry.data.tags || []).forEach(tag => {
    acc[tag] = (acc[tag] || 0) + 1;
  });
  return acc;
}, {} as Record<string, number>);

// Sort alphabetically
const sortedTags = Object.entries(tagCounts)
  .sort(([a], [b]) => a.localeCompare(b));
---

<BaseLayout title="Tags">
  <header class="site-header">
    <a href="/">‚Üê Archive</a>
  </header>

  <h1>Tags</h1>
  <p class="tag-count">{sortedTags.length} {sortedTags.length === 1 ? 'tag' : 'tags'}</p>

  <div class="tags-index">
    {sortedTags.map(([tag, count]) => (
      <a href={`/tags/${tag}`} class="tag-item">
        <span class="tag-name">{tag}</span>
        <span class="tag-count-badge">{count}</span>
      </a>
    ))}
  </div>
</BaseLayout>

<style>
  .tags-index {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    margin-top: 2rem;
  }

  .tag-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.75rem;
    margin: 0 -0.75rem;
    text-decoration: none;
    color: var(--black);
    font-family: var(--font-mono);
    font-size: var(--text-sm);
    text-transform: uppercase;
    letter-spacing: var(--tracking-widest);
    transition: all 100ms;
  }

  .tag-item:hover {
    background: var(--black);
    color: var(--white);
  }

  .tag-count-badge {
    font-size: var(--text-xs);
    color: var(--muted-foreground);
  }

  .tag-item:hover .tag-count-badge {
    color: var(--white);
  }
</style>
