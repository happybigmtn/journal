---
import BaseLayout from '../layouts/BaseLayout.astro';
import { BotcoinExplorer } from '../components/explorer/BotcoinExplorer';
---

<BaseLayout title="Bots | Journal" description="Botcoin block explorer and network stats">
  <div class="bots-page">
    <h1>ðŸ¤– Botcoin Explorer</h1>
    <p class="subtitle">Real-time block explorer for the agent chain</p>
    
    <BotcoinExplorer client:load />
    
    <div class="links-footer">
      <a href="https://github.com/happybigmtn/botcoin" target="_blank">GitHub</a>
      <a href="https://clawdhub.com/happybigmtn/botcoin-miner" target="_blank">Mining Skill</a>
    </div>
  </div>
</BaseLayout>

<style>
  .bots-page {
    max-width: 1000px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  h1 {
    font-size: 2rem;
    margin-bottom: 0.5rem;
  }

  .subtitle {
    color: var(--color-text-muted, #888);
    margin-bottom: 2rem;
  }

  .links-footer {
    display: flex;
    gap: 1.5rem;
    margin-top: 2rem;
    padding-top: 1rem;
    border-top: 1px solid var(--color-border, #333);
  }

  .links-footer a {
    color: var(--color-accent, #c4a882);
    text-decoration: none;
  }

  .links-footer a:hover {
    text-decoration: underline;
  }

  /* Explorer styles */
  :global(.explorer) {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  :global(.loading), :global(.error) {
    text-align: center;
    padding: 3rem;
    color: var(--color-text-muted, #888);
  }

  :global(.error) {
    color: #e74c3c;
  }

  :global(.stats-section),
  :global(.blocks-section),
  :global(.miners-section) {
    background: var(--color-surface, #1a1a1a);
    border-radius: 12px;
    padding: 1.5rem;
  }

  :global(.stats-section h2),
  :global(.blocks-section h2),
  :global(.miners-section h2) {
    font-size: 1.25rem;
    margin-bottom: 1rem;
    border-bottom: 1px solid var(--color-border, #333);
    padding-bottom: 0.5rem;
  }

  :global(.stats-grid) {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 1rem;
  }

  :global(.stat-card) {
    background: var(--color-bg, #0a0a0a);
    padding: 1rem;
    border-radius: 8px;
    text-align: center;
  }

  :global(.stat-label) {
    display: block;
    font-size: 0.75rem;
    color: var(--color-text-muted, #888);
    margin-bottom: 0.25rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  :global(.stat-value) {
    display: block;
    font-size: 1.5rem;
    font-weight: 600;
    font-family: 'IBM Plex Mono', monospace;
  }

  :global(.blocks-table) {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.875rem;
  }

  :global(.table-header) {
    display: grid;
    grid-template-columns: 80px 1fr 1fr 60px 80px;
    gap: 1rem;
    padding: 0.75rem;
    background: var(--color-bg, #0a0a0a);
    border-radius: 6px;
    font-weight: 600;
    color: var(--color-text-muted, #888);
    text-transform: uppercase;
    font-size: 0.7rem;
    letter-spacing: 0.05em;
  }

  :global(.table-row) {
    display: grid;
    grid-template-columns: 80px 1fr 1fr 60px 80px;
    gap: 1rem;
    padding: 0.75rem;
    border-bottom: 1px solid var(--color-border, #222);
  }

  :global(.table-row:hover) {
    background: rgba(255, 255, 255, 0.02);
  }

  :global(.table-row .height) {
    color: var(--color-accent, #c4a882);
    font-weight: 600;
  }

  :global(.table-row .hash) {
    color: #6eb5ff;
  }

  :global(.table-row .miner) {
    color: #7fdb8a;
  }

  :global(.table-row .age) {
    color: var(--color-text-muted, #888);
  }

  :global(.miners-list) {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  :global(.miner-row) {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.75rem;
    background: var(--color-bg, #0a0a0a);
    border-radius: 6px;
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.875rem;
  }

  :global(.miner-row .rank) {
    color: var(--color-text-muted, #888);
    width: 40px;
  }

  :global(.miner-row .address) {
    color: #7fdb8a;
    flex: 1;
  }

  :global(.miner-row .blocks) {
    color: var(--color-accent, #c4a882);
    font-weight: 600;
  }

  @media (max-width: 700px) {
    :global(.table-header),
    :global(.table-row) {
      grid-template-columns: 60px 1fr 50px 60px;
    }
    :global(.table-header span:nth-child(3)),
    :global(.table-row .miner) {
      display: none;
    }
  }
</style>
